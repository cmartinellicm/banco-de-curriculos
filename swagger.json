{
  "swagger": "2.0",
  "info": {
    "description": "API de profissionais cadastrados para recrutamento e seleção pela empresa JobsNET.",
    "version": "1.0.0",
    "title": "JobsNET Users API",
    "contact": {
      "email": "apiteam@jobsnet.com.br"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "gamaacademy-jobsnet.herokuapp.com",
  "tags": [
    {
      "name": "register",
      "description": "Cadastro de profissionais em banco de dados."
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/register": {
      "post": {
        "tags": ["register"],
        "summary": "Cadastra novo usuário",
        "description": "Cadastra novo usuário (profissional) na base de dados.",
        "operationId": "addUsers",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Usuário cadastrado com sucesso",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          },
          "400": {
            "description": "Campos obrigatórios não preenchidos"
          },
          "401": {
            "description": "Usuário já existe"
          },
          "500": {
            "description": "Erro no acesso ao banco de dados"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "nome": {
          "type": "string"
        },
        "cpf": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "cargo": {
          "type": "string"
        },
        "dataNascimento": {
          "type": "string"
        },
        "estadoCivil": {
          "type": "string",
          "enum": ["solteiro", "casado", "divorciado", "viuvo"]
        },
        "sexo": {
          "type": "string",
          "enum": ["feminino", "masculino"]
        },
        "telefone1": {
          "type": "string"
        },
        "telefone2": {
          "type": "string"
        },
        "cep": {
          "type": "string"
        },
        "logradouro": {
          "type": "string"
        },
        "numero": {
          "type": "integer",
          "format": "int32"
        },
        "bairro": {
          "type": "string"
        },
        "cidade": {
          "type": "string"
        },
        "estado": {
          "type": "string"
        }
      }
    }
  }
}
